<%= javascript_pack_tag 'gif_form', defer: true %>

<%= form_with(model: gif, local: true) do |form| %>
  <% if gif.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gif.errors.count, "error") %> prohibited this gif from being saved:</h2>

      <ul>
        <% gif.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, accept: 'image/gif' %>
    <%= image_tag action_name == 'new' ? '' : gif.image, id: 'gif-preview' %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :source_url %>
    <%= form.url_field :source_url %>
  </div>

  <div class="field">
    <%= form.label :tag_list %>
    <p>YouTuber名、所属グループ名、かわいい、など書くとイイゾ</p>
    <%= form.text_field :tag_list, value: gif.tag_list.map { |tag| {value: tag} }.to_json %>
  </div>

  <div class="actions">
    <%= form.button type: 'button', onclick: 'submit()' %>
  </div>
<% end %>
