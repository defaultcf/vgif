<%= image_tag @gif.image %>

<p>
  <strong>Title:</strong>
  <%= title @gif.title %>
</p>

<p>
  <strong>Source:</strong>
  <%= @gif.source_url %>
</p>

<p>
  <strong>User:</strong>
  <%= @gif.user_id %>
</p>

<p>
  <strong>Tags:</strong>
  <% @gif.tag_list.map do |tag| %>
    <%= link_to tag_path(tag) do %>
      <span class="tag is-link"><%= tag %></span>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_gif_path(@gif) %> |
<%= link_to 'Back', gifs_path %>
